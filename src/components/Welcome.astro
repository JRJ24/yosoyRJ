---
// import astroLogo from '../assets/astro.svg';
import background from "../assets/background.svg";
import VideoSection from "./videosSection.jsx";

// Pon aquí tu string (puede venir con &t=...)
const latestVideoIdRaw = "6LkgaQCOFA0&t=96s";
const latestVideoId = latestVideoIdRaw.split(/[&?]/)[0];

let urlInstagram = "https://www.instagram.com/yosoyese__?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==";
let urlTwitter = "https://x.com/JonaifryRJ?t=MamrNownk8vB49sVRyweNg&s=09";
let urlLinkedIn = "https://www.linkedin.com/in/jonaifry-rodriguez-de-jesus-688317306/";
let urlTelegram = "https://t.me/+Uf5YsQJOnpo0NGUx";
---

<div id="container">
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <section id="hero">
    <h1>Hola, soy RJ</h1>
  </section>

  	<section class="container" id="about">
		<div class="box">
			<h2>Sobre mi</h2>
			<p>
				yosoyRJ y soy un creador de contenido digital y entusiasta de la tecnologia.<br>
				Desarrollador web fullstack.
			</p>
		</div>
	</section>

  <section class="containerLinks" id="links">
    <div class="box link">
      <h3>Instagram</h3>
      <p>Sigueme en Instagram para ver mis fotos y videos.</p>
      <a class="btn" id="btnInstagram" href={urlInstagram} target="_blank" rel="noopener">
        <i class="fa fa-instagram" aria-hidden="true"></i>
      </a>
    </div>

    <div class="box twitter link">
      <h3>Twitter/X</h3>
      <p>Sigueme en Twitter para ver mis tweets y actualizaciones.</p>
      <a class="btn" id="btnTwitter" href={urlTwitter} target="_blank" rel="noopener">
        <i class="fa fa-twitter" aria-hidden="true"></i>
      </a>
    </div>

    <div class="box  link">
      <h3>LinkedIn</h3>
      <p>Conectemos en LinkedIn para oportunidades profesionales.</p>
      <a class="btn" id="btnLinkedin" href={urlLinkedIn} target="_blank" rel="noopener">
        <i class="fa fa-linkedin" aria-hidden="true"></i>
      </a>
    </div>
  </section>
  <section class="containerLinks" id="links">
    <div class="box link">
      <h3>Canal Telegram</h3>
      <a class="btn" id="btnInstagram" href={urlTelegram} target="_blank" rel="noopener">
        <i class="fa fa-telegram" aria-hidden="true"></i>
      </a>
    </div>
  </section>

  <!-- pasas el id manual al componente -->
       <h2><b>Videos mas relevantes</b></h2>

  <div id="linksCol">
    <VideoSection latestVideoId={latestVideoId} />
    <VideoSection latestVideoId="TGT3-fsH4Bg" />
  </div>
  
</div>


<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  #container {
    font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans",
      Arial, sans-serif;
    height: 100%;
  }

  main {
    height: 100%;
    display: flex;
    justify-content: center;
  }

  #hero {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    padding: 16px;
  }

  h1 {
    font-size: 22px;
    margin-top: 0.25em;
  }

  #links {
    display: flex;
    flex-direction: row;
    align-items: stretch; /* important: hace que las cajas tengan misma altura */
    justify-content: center;
    gap: 16px;
    margin: 40px 20px;
    flex-wrap: wrap; /* permite que bajen en pantallas pequeñas */
  }
  #linksCol{
    display: flex;
    flex-direction: row;
    gap: 16px;
    justify-content: center;
    align-items: flex-start;
    flex-wrap: wrap; /* baja a una columna en pantallas pequeñas */
    width: 100%;
    box-sizing: border-box;
    padding: 0 8px;
  }
  #links .box {
    flex: 1 1 280px; /* crecer/encoger; base 280px */
    max-width: 320px; /* ancho máximo por caja */
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* distribuye contenido para igualar alturas */
    align-items: center;
    padding: 16px;
    color: #000000;
    text-decoration: none;
    transition: color 0.2s;
    box-sizing: border-box;
    text-align: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(83.21deg,#f5f5f5 0%,#bbbbbb 100%);
    border-radius: 10px;
    padding: 10px 12px;
    text-decoration: none;
    color: inherit;
  }

  .btn:hover {
    box-shadow: none;
    color: #000;
  }

  .btn:active {
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 2px 0 rgba(0, 0, 0, 0.24);
  }

  pre {
    font-family: ui-monospace, "Cascadia Code", "Source Code Pro", Menlo,
      Consolas, "DejaVu Sans Mono", monospace;
    font-weight: normal;
    background: linear-gradient(14deg, #d83333 0%, #f041ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
	color: #000;
	text-align: center;
  }

  h2 {
    margin: 0 0 1em;
    font-weight: normal;
    color: #111827;
    font-size: 20px;
	text-align: center;
  }

  p {
    color: #4b5563;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.006em;
    margin: 0;
	text-align: center;
  }

  code {
    display: inline-block;
    background:
      linear-gradient(66.77deg, #f3cddd 0%, #f5cee7 100%) padding-box,
      linear-gradient(155deg, #d83333 0%, #f041ff 18%, #f5cee7 45%) border-box;
    border-radius: 8px;
    border: 1px solid transparent;
    padding: 6px 8px;
	color: #000;
  }

  .box {
    padding: 16px;
    background: rgba(255, 255, 255, 0.466);
    border-radius: 16px;
    border: 1px solid white;
  }
  


  @media screen and (max-height: 368px) {
    #news {
      display: none;
    }
  }

  @media screen and (max-width: 768px) {
    #container {
      display: flex;
      flex-direction: column;
    }

    #hero {
      display: block;
      padding-top: 10%;
    }

    #links {
      flex-wrap: wrap;
    }

    #links a.button {
      padding: 14px 18px;
    }

    #news {
      right: 16px;
      left: 16px;
      bottom: 2.5rem;
      max-width: 100%;
    }

    h1 {
      line-height: 1.5;
    }
  }

  /* contenedor que agrupa las dos VideoSection */
  #linksCol {
    display: flex;
    flex-direction: row;
    gap: 16px;
    justify-content: center;
    align-items: flex-start;
    flex-wrap: wrap; /* baja a una columna en pantallas pequeñas */
    width: 100%;
    box-sizing: border-box;
    padding: 0 8px;
  }

  /* opcional: en pantallas muy pequeñas poner una columna */
  @media (max-width: 760px) {
    #linksCol { gap: 12px; }
    #linksCol > section#videos { flex: 1 1 100%; max-width: 100%; }
  }
</style>
